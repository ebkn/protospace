.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-responsive-collapse')
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to root_url, class: 'navbar-brand' do
      = image_tag 'logo.png', alt: 'PROTO TYPE - SHARE THE PROTOTYPE', height: '36px'
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            = link_to user_path(current_user), class: 'dropdown-toggle', 'aria-expanded': false, 'data-toggle': 'dropdown', role: 'button' do
              = current_user.name
              %span.caret
            %ul.dropdown-menu{role: 'menu'}
              %li
                = link_to 'My Page', current_user
              %li
                = link_to 'Edit profile', edit_users_path
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          %li
            .btn.btn-primary.navbar-btn
              = link_to new_user_session_path do
                Get Started
        %li
          .btn.btn-primary.navbar-btn
            = link_to 'New Proto', new_prototype_path
