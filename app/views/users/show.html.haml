= provide :title, "#{@user.name}'s page"
.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag @user.avatar_url, size: '64x64', class: 'media-object' if @user.avatar.present?
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @prototypes.count
            %i Projects
        .proto-user
          %span.degree
          = @user.occupation
        .row
          .col-md-6
            %h4 Position
            = @user.position
            %p
          .col-md-6
            %h4 Profile
            = @user.profile
            %p
.container.proto-list
  .row
    = render @prototypes
  %ul.pagination
    %li
      = paginate @prototypes
